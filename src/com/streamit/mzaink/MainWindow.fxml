<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>


<GridPane fx:controller="com.streamit.mzaink.Controller" xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10"
          style="-fx-background-image: url('https://goo.gl/yemxAB')"
          fx:id="mainGridPane">

      <Label
              text="Hello User."
              GridPane.rowIndex="0"
              GridPane.columnIndex="0"
              style="-fx-text-fill: white; -fx-font-size: 16"/>
      <!--style="-fx-text-fill: DarkMagenta; -fx-font-size: 20">-->

      <Label
              text="How are you? :D"
              GridPane.rowIndex="1"
              GridPane.columnIndex="0"
              style="-fx-text-fill: white; -fx-font-size: 16"/>
      <!--style="-fx-text-fill: DarkViolet; -fx-font-size: 30"/>-->

      <Label
              text="Please continue ahead."
              GridPane.rowIndex="2"
              GridPane.columnIndex="0"
              style="-fx-text-fill: white; -fx-font-size: 16;"/>
      <!--style="-fx-text-fill: DarkSlateBlue"/>-->

      <Button
              text="Continue"
              fx:id="continueButton"
              GridPane.rowIndex="4"
              GridPane.columnIndex="0"
              GridPane.halignment="CENTER"
              style="-fx-background-color: DodgerBlue; -fx-text-fill: black; -fx-font-size: 16"
              onAction="#handleContinueButtonClick"/>

</GridPane>